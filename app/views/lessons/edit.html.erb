<div class="page-header">
<h1 class="page-title">Edit Lesson</h1>
</div>

<div class="tabbable"> <!-- Only required for left/right tabs -->
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">Details</a></li>
    <li><a href="#tab2" data-toggle="tab">Materials</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
      <%= render 'form' %>
    </div>
    <div class="tab-pane" id="tab2">
      <div class="blog-post">
           <div class="span12">
             <% @lesson.materials.each do |material| %>
                 <div class="row">
                        <p>
                          <% if material.content_type == 1 %>
                              <span class="label label-success">stored - rich text</span>
                          <% elsif material.content_type == 2 %>
                              <span class="label label-success">linked from sites</span>
                          <% else %>
                              <span class="label label-success">stored - file</span>
                          <% end %>
                          | <i class="icon-calendar"></i> <%= material.updated_at.to_date.to_s(:long) %>
                          | <i class="icon-share"></i>8 associated lessons
                        </p>
                 </div>
                 <div class="row">
                        <p>
                          <% if material.content_type == 1 %>
                              <%= raw material.detail_content %>
                          <% elsif material.content_type == 2 %>
                              <%= raw material.embedded_content %>
                          <% else %>
                              <%= material.stored_file_name %> -
                              <%= material.stored_content_type %>
                          <% end %>
                        </p>
                 </div>
                 <div class="row">
                        <div class="span2"><p></p></div>
                        <div class="span10">
                          <%= link_to 'Edit', edit_material_path(material), :class => 'btn' %>
                          <%= link_to 'Show', material, :class => 'btn btn-success' %>
                          <%= link_to 'Remove', material, confirm: 'Are you sure?', method: :delete, :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
                        </div>
                  </div>
                  <hr>
             <% end %>
           </div>
      </div>

      <br>
      <%= link_to 'New Material', new_material_path(:lesson_id => @lesson.id), :class => 'btn btn-primary' %>
      <%= link_to 'Add from My Materials', materials_path(:lesson_id => @lesson.id), :class => 'btn btn-primary' %>
    </div>
  </div>
</div>

