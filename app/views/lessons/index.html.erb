<h1>Lessons - <span class="post-title"><%= link_to @course_title, edit_course_path(@course_id) %></span></h1>

<% if @lessons.count > 0 %>

    <table class="table table-striped">
      <tr>
        <th>No.</th>
        <th>Title</th>
        <th>Description</th>
        <th></th>
      </tr>

    <% @count = 1 %>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%=  @count %></td>
        <td><%= lesson.title %></td>
        <td><%= lesson.description %></td>
        <td><%= link_to 'Edit', edit_lesson_path(lesson), :class => 'btn btn-mini'%>
        <%= link_to 'Destroy', lesson, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
    </table>
<% end %>

<br />

<%= link_to 'New Lesson', new_lesson_path(:course_id => @course_id, :course_title => @course_title), :class => 'btn btn-primary', :remote => true %>
