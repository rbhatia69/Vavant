<%= semantic_form_for @lesson, :html => { :multipart => true } do |f| %>
  <%= f.inputs do %>
    <%= f.input :title, :input_html => { :class => "span12"} %>
    <%= f.input :description, :as => :ckeditor, :input_html => { :toolbar => 'Full'} %>
    <%= f.input :course_id, :as => :hidden  %>
    <%= f.input :sequence, :as => :hidden %>
    <%= f.file_field :material %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input, :label => 'Save' %>
  <% end %>
<% end %>



