<%= semantic_form_for @course, :html => { :multipart => true } do |f| %>
  <%= f.inputs do %>
    <%= f.input :title, :input_html => { :size => 5 } %>
    <%= f.input :description, :input_html => { :class => 'autogrow', :rows => 5, :cols => 40 }  %>
    <%= f.input :price, :as => :number, :input_html => { :size => 5 } %>
    <%= f.file_field :photo %>
    <%= f.input :enabled %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input, :label => 'Save' %>
  <% end %>
<% end %>
