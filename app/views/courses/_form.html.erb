
<%= semantic_form_for @course, :html => { :multipart => true } do |f| %>
  <%= f.inputs do %>
    <%= f.input :title, :input_html => { :size => 50 } %>
    <%= f.input :description, :as => :ckeditor, :input_html => { :toolbar => 'Easy'} %>
    <%= f.input :price, :as => :monetary, :input_html => { :size => 5 } %>
    <%= f.input :language, :include_blank => false %>
    <%= f.input :tag_list, :label => 'Tags (comma separated)' %>
    <% if !@course.id.nil? %>
        <%= image_tag @course.photo.url(), :size => "200x200" %><p><br></p>
    <% end %>
    <%= f.file_field :photo %>
    <%= f.input :enabled %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input, :label => 'Save' %>
  <% end %>
<% end %>