<h1>My Materials</h1>
<h6>Materials - content associated with lessons - can either be stored in Vavant as files or rich content or linked to sites - YouTube, Scribd, Vimeo etc.</h6>
<br>
<div class="blog-post">
     <div class="span12">
       <% @materials.each do |material| %>
           <div class="row">
                  <p>
                    <% if material.content_type == 1 %>
                        <span class="label label-success">Stored - Rich Text</span>
                    <% elsif material.content_type == 2 %>
                        <span class="label label-success">Linked from sites</span>
                    <% else %>
                        <span class="label label-success">Stored - File</span>
                    <% end %>
                    | <i class="icon-calendar"></i> <%= material.updated_at.to_date.to_s(:long) %>
                    | <i class="icon-share"></i>8 associated lessons
                  </p>
           </div>
           <div class="row">
                  <p>
                    <% if material.content_type == 1 %>
                        <%= raw material.detail_content %>
                    <% elsif material.content_type == 2 %>
                        <%= raw material.embedded_content %>
                    <% else %>
                        <%= material.stored_file_name %> -
                        <%= material.stored_content_type %>
                    <% end %>
                  </p>
           </div>
           <div class="row">
                  <div class="span2"><p></p></div>
                  <div class="span10">
                    <%= link_to 'Edit', edit_material_path(material), :class => 'btn' %>
                    <%= link_to 'Show', material, :class => 'btn btn-success' %>
                    <%= link_to 'Lessons (8)', material, :class => 'btn btn-primary' %>
                    <%= link_to 'Destroy', material, confirm: 'Are you sure?', method: :delete, :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
                  </div>
            </div>
            <hr>
       <% end %>
     </div>
</div>

<br>
<%= link_to 'Add Material', new_material_path, :class => 'btn btn-primary' %>
