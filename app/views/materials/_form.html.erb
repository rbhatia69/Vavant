<%= semantic_form_for @material do |f| %>
  <%= f.inputs do %>
    <%= f.input :content_type, :as => :select, :collection => [["Stored - Rich Text", 1], ["Linked from sites", 2], ["Stored - File", 3]], :include_blank => false  %>
    <%= f.input :detail_content, :as => :ckeditor, :input_html => { :toolbar => 'Full'} %>
    <%= f.input :embedded_content %>
    <%= f.file_field :stored %>
    <%= f.input :user_id, :as => :hidden  %>
    <% if !@material.lesson_ids.nil? && @material.lesson_ids.count > 0%>
        <%= f.input :lesson_ids, :as => :hidden %>
    <% end %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
